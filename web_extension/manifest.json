{
  "manifest_version": 3,
  "name": "Cultural Agent Text Selector",
  "version": "1.0.0",
  "description": "Select text on web pages and send it to Cultural Agent AI",
  
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cultural Agent Text Selector",
    "default_icon": {
      "16": "icons/icon-128.png",
      "32": "icons/icon-128.png",
      "48": "icons/icon-128.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon-128.png",
    "32": "icons/icon-128.png",
    "48": "icons/icon-128.png",
    "128": "icons/icon-128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["content.css"],
      "matches": ["<all_urls>"]
    }
  ]
}